mixin advantages(props, mods)

  //- Вызов:
  
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' advantages--' + modsList[i].trim();
      }
    }

    if (!props) {
      props = {};
    }

  .advantages(class=allMods)&attributes(attributes)
    .advantages__aside
      .advantages__info-wrapper
        .advantages__info
          .advantages__image
            a.advantages__link(href="car-details.html")
              img(src=props.src alt="image")
          .advantages__desc
