          .advantages__form
            form
              +form-group-text({
                  label: "Имя"
              })
              +form-group-text({
                  label: "Телефон"
              })
              +form-group-text-area({
                  label: "Текст"
              })
              +form-check()
              <button type="submit" class="default-btn"> Отправить
                <span style="top: -416.8px; left: -40px;"></span>
              </button>
    .advantages__compare-wrapper
      block


