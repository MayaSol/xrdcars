//- Все примеси в этом файле должны начинаться c имени блока (btn-play)

mixin btn-play(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +btn-play('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' btn-play--' + modsList[i].trim();
      }
    }

  .btn-play(class=allMods)&attributes(attributes)
